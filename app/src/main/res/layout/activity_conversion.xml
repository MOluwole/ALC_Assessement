<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yung_coder.oluwole.alc_assessement.Conversion">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currency Conversion"
        android:textSize="20sp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorBlack"
        android:id="@+id/text_header"
        android:layout_margin="16dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_header"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:hint="Enter Value to Convert"
        android:padding="15dp"
        android:id="@+id/text_value_convert"
        android:inputType="numberDecimal"
        />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="Convert to "
        android:id="@+id/button_first"
        android:layout_below="@+id/text_value_convert"
        android:layout_marginLeft="20dp"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        />
    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_value_convert"
        android:layout_toRightOf="@+id/button_first"
        android:id="@+id/button_second"
        android:text="Convert from"
        android:padding="20dp"
        android:layout_marginTop="10dp"
        android:textColor="@color/colorWhite"
        android:background="@color/colorPrimary"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="20dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_first"
        android:padding="10dp"
        android:text=" Conversion Result "
        android:textSize="20sp"
        android:textColor="@color/colorBlack"
        android:layout_margin="20dp"
        android:id="@+id/text_result"
        />



</RelativeLayout>
